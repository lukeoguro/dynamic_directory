<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Dynamic Directory</title>
</head>

<body>
  <ul>
    <% @files.each do |file| %>
      <li>
        <a href="/<%= file %>"> <%= file %> </a>
      </li>
    <% end %>
  </ul>
  <% if params[:sort] == "descending" %>
      <a href="/"> Sort ascending </a>
  <% else %>
    <a href="/?sort=descending"> Sort descending </a>
  <% end %>
</body>
</html>
